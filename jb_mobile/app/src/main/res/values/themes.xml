<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jb_mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/d_dcream_n_lcoal</item>
        <item name="colorPrimaryVariant">@color/d_cream_n_coal</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/d_dcream_n_lcoal</item>
        <item name="colorSecondaryVariant">@color/d_cream_n_coal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/archit_regular</item>
    </style>

    <style name="hintStyle">
        <item name="fontFamily">@font/archit_regular</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.Jb_mobile.Fullscreen" parent="Theme.Jb_mobile">
        <item name="android:actionBarStyle">@style/Widget.Theme.Jb_mobile.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Jb_mobile.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>