<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_rect_greys"
    android:padding="4dp"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIcon"
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_rect_gradient_grey" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        >


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="@color/d_black_n_white"
            tools:text="@string/lorem" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/archit_regular"
            android:gravity="start"
            android:maxLines="2"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/d_black_n_white"
            tools:text="@string/lorem" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/archit_regular"
            android:text="@string/more_info"
            android:textAllCaps="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="4dp"
            android:textColor="@color/d_orange_n_yellow"
            android:textSize="12sp"
           />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>