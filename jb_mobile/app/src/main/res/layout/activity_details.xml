<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/d_cream_n_coal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            tools:listitem="@layout/layout_til" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btEditOrUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/archit_regular"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="16dp"

            android:text="@string/update_book_details"
            android:textStyle="bold"
            app:backgroundTint="@color/d_black_n_white"
            app:cornerRadius="48dp"
            app:elevation="0dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/archit_regular"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="16dp"
            android:text="@string/delete_this_book"
            android:textStyle="bold"
            app:backgroundTint="#B50202"
            app:cornerRadius="48dp"
            app:elevation="0dp" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>