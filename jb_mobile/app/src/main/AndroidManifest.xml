<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="work.curioustools.jb_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JoeBookShopApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jb_mobile"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".modules.dashboard.ui_views.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_splash"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.dashboard.ui_views.DetailsActivity"
            android:exported="true" />
        <activity
            android:name=".modules.dashboard.ui_views.DashboardActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>